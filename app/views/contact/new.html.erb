
  <% flash.each do |k,v| %>
    <div class="text-center img-rounded alert-<%= k %>"><%= v %></div>
  <% end %>

<div align="center" id="contact">
    <ul class="list-group">
        <%= form_for(:contact, url:{action: "create"},class: 'form-control' ) do |f|%>
          <li><%= f.label 'Name' , class: '' %></li>
          <li><%= f.text_field :name , value: @name ,class: "form-control" %></li>
          <li><%= f.label 'Message' %></li>
          <li><%= f.text_area :msg ,value: @msg, class: "form-control", rows: 6, cols: 40 %></li>
          <li><%= f.submit 'ENVIAR' , class: "btn btn-lg btn-danger" %></li>
       <% end %>
    </ul>
</div>